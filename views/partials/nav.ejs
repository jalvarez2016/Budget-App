<nav>
    <div class="logo">
        <a href="/">
            <h2>BudgetApp</h2>
        </a>
    </div>
    <div class="side-btns">
        <% if (user) { %>
            <div class="wrapper" style="display: flex; flex-direction: column; align-items: flex-end">
              <div class="logged-user" style="display: flex; margin-bottom: 1em; align-items: center">
                <span style="margin-right: 1em;"><%= user.firstname %> <%= user.lastname %></span>
                <div>
                    <!-- have an ejs conditional here using user -->
                    <form action="/logout" method="POST">
                        <button class="btn btn-outline-primary" type="submit">Logout</button>
                    </form>
                </div>
              </div>
              <div class="nav-buttons" style="display:flex; justify-content: flex-end;">
                <div>
                    <!-- have an ejs conditional here using user -->
                    <a href="/users/<%= user.id %>">
                        <button class="btn btn-primary">Profile</button>
                    </a>
                </div>
                <div>
                    <!-- have an ejs conditional here using user -->
                    <form action="/budgets/new" method="GET">
                        <input type="hidden" value="<%= user.id %>">
                        <button class="btn btn-secondary ml-3" type="submit">New Budget +</button>
                    </form>
                </div>

              </div>
            </div>
        <% } else { %>
            <div>
                <!-- have an ejs conditional here using user -->
                <a href="/signup">
                    <button class="btn btn-primary">Sign Up</button>
                </a>
            </div>
            <div class="ml-3">
                <!-- have an ejs conditional here using user -->
                <a href="/signin">
                    <button class="btn btn-outline-primary">Sign In</button>
                </a>
            </div>
        <% } %>
    </div>
</nav>
